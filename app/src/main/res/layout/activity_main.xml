<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="portrait"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"

    >
<LinearLayout
    android:id="@+id/Main_LAY_upper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
>
    <ImageView
        android:id="@+id/Main_IMG_user"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/user"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:tag="user"
        android:clickable="true"
        />

    <TextView
        android:id="@+id/Main_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    LET'S\nZOOM-BA"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textColor="#8F0898"

        />
    <ImageView
        android:id="@+id/Main_IMG_settings"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/settings"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:tag="settings"
        android:clickable="true"
        />
</LinearLayout>

    <LinearLayout
        android:id="@+id/Main_LAY_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"

        >
        <Button
            android:id="@+id/Main_BTN_workout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Workout"
            android:textSize="25sp"
            android:backgroundTint="#B63434"
            android:tag="workout"
            />
        <Button
            android:id="@+id/Main_BTN_requests"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:backgroundTint="#B6AA3B"
            android:text="Messages"
            android:textSize="25sp"
            android:layout_weight="1"
            android:tag="requests"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Main_LAY_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        <Button
            android:id="@+id/Main_BTN_nutritionist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nutritionists"
            android:textSize="18sp"
            android:layout_weight="1"
            android:backgroundTint="#4B46CD"
            android:tag="nutritionist"
            />
        <Button
            android:id="@+id/Main_BTN_equipment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#8351D1"
            android:text="Equipment"
            android:textSize="25sp"
            android:tag="equipment"
            />

    </LinearLayout>




</LinearLayout>