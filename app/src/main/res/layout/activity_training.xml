<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:screenOrientation="portrait"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingActivity"
    android:background="#AB464480"
    android:padding="8dp"
    >

    <TextView
        android:id="@+id/training_LBL_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training List"
        android:textSize="35dp"
        android:textColor="#CF0B0B"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:id="@+id/Training_IMG_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:tag="back"
        />

    <LinearLayout

    android:id="@+id/training_LAY_liner1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_below="@id/training_LBL_Title"
    android:layout_marginTop="20dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_hand"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_relfirst"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/training_LBL_Title"
        android:layout_marginTop="20dp"
        >

        <TextView

            android:id="@+id/training_LBL_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muscle\n08:00 6/3/2021\nBen Dover\n100₪"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:tag="name"
            />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner2"
    android:layout_below="@id/training_LAY_liner1"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_hand"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_relsecond"
        android:layout_below="@id/training_LAY_relfirst"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        >

        <TextView

            android:id="@+id/training_LBL_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:tag="name1"
            android:text="Aerobic\n08:00 6/3/2021\nHarry Azcrac\n50₪"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_below="@id/training_LAY_liner2"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_hand"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_relthird"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/training_LAY_relsecond"
        android:layout_marginTop="15dp"
        >


        <TextView

            android:id="@+id/training_LBL_name3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nitro\n13:00 6/3/2021\nIvona Screw\n75₪"
            android:layout_marginLeft="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:tag="name3"
            />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner4"
    android:layout_below="@id/training_LAY_liner3"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_hand"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_fourth"
        android:layout_below="@id/training_LAY_relthird"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        >



        <TextView

            android:id="@+id/training_LBL_name4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muscle\n17:00 6/3/2021\nPhil Mianus\n200₪"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:tag="name4"
            />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/training_LAY_liner5"
    android:layout_below="@id/training_LAY_liner4"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:background="#AB424242"
    android:layout_marginTop="15dp"
    >
    <ImageView
        android:id="@+id/training_IMG_hand5"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/img_hand"
        android:layout_gravity="left"
        />
</LinearLayout>



    <RelativeLayout
        android:id="@+id/training_LAY_fifth"
        android:layout_below="@id/training_LAY_fourth"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:background="#AB424242"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        >



        <TextView

            android:id="@+id/training_LBL_name5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zumba\n20:00 6/3/2021\nDia Rhea\n55₪"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="10dp"
            android:tag="name5"
            />
    </RelativeLayout>


    <Button
        android:id="@+id/training_BTN_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Feedback"
        android:layout_alignParentRight="true"
        android:layout_below="@id/training_LAY_fifth"
        android:layout_marginTop="25dp"
        android:tag="feedback"
        />
    <Button
        android:id="@+id/training_BTN_sort"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sort"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/training_LAY_fifth"

        android:layout_marginTop="25dp"
        android:tag="sort"
        />
    <Button
        android:id="@+id/training_BTN_workOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/training_LAY_fifth"
        android:layout_marginTop="25dp"
        android:tag="work"
        />


</RelativeLayout>