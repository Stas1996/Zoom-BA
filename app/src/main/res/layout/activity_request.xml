<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_LAY_linear"
    android:screenOrientation="portrait"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RequestActivity"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/request_IMG_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/back"
        android:tag="back"
        />
    <TextView
        android:id="@+id/request_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messages"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textStyle="bold"
        android:textColor="@color/purple_700"
        android:layout_below="@id/request_IMG_back"
        />

<LinearLayout
    android:id="@+id/requestLAY_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/request_BTN_add"
    android:layout_below="@id/request_LBL_title"
    android:orientation="vertical"
    >
    <CheckBox

        android:id="@+id/request_CHBOX_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/request_LBL_title"
        android:layout_marginTop="26dp"
        android:text="Looking for a trainer to be body builder"
        android:textSize="15sp"
        />

    <CheckBox
        android:layout_below="@id/request_CHBOX_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Want to loose weight, please contact me"
        android:textSize="15sp"
        />

</LinearLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/request_BTN_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_plus_24"
        android:text="add a Message"
        app:cornerRadius="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:tag="add"
        />



</RelativeLayout>