<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="portrait"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"

    android:orientation="vertical"
    >

<LinearLayout
    android:id="@+id/Login_Lay_upper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/Login_LBL_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZOOM-BA"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_weight="1"
        />
<EditText
    android:id="@+id/Login_EDT_username"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Username"
    android:layout_marginTop="0dp"
    android:layout_weight="1"
    android:digits="qwertyuiopasdfghjklzxcvbnm7410852963QWERTYUIOPASDFGHJKLZXCVBNM"
    />

    <EditText
        android:id="@+id/Login_EDT_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:digits="qwertyuiopasdfghjklzxcvbnm7410852963QWERTYUIOPASDFGHJKLZXCVBNM!@#$%^*()"
        />
<Button
    android:id="@+id/Login_BTN_login"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Login"
    android:textSize="25sp"
    android:layout_weight="1"
    android:layout_gravity="center"
    android:clickable="true"
    android:tag="Login"

    />
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_weight="1"
    >
    <TextView
        android:id="@+id/Login_LBL_forgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textAllCaps="false"
        android:clickable="true"
        android:tag="Forget"
        />

    <CheckBox
        android:id="@+id/Login_CBX_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember me!"
        android:layout_marginLeft="120dp"
        />
</LinearLayout>

</LinearLayout>






    <LinearLayout
        android:id="@+id/Login_Lay_mid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"

        >

        <Button
            android:id="@+id/Login_BTN_Coach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="#B63434"
            android:clickable="true"
            android:text="Register as a \nCoach"
            android:tag="Coach"
            />

        <Button
            android:id="@+id/Login_BTN_Trainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Register as a \nTrainee"
            android:layout_weight="1"
            android:backgroundTint="#B6AA3B"
            android:clickable="true"
            android:tag="Trainer"

            />



    </LinearLayout>


    <LinearLayout
        android:id="@+id/Login_Lay_down"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/Login_BTN_Diet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Register as a \nDiet"
            android:layout_weight="1"
            android:backgroundTint="#4B46CD"
            android:clickable="true"
            android:tag="Diet"
            />
        <Button
            android:id="@+id/Login_BTN_Sup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Register as a \nSupplier"
            android:layout_weight="1"
            android:backgroundTint="#8351D1"
            android:clickable="true"
            android:tag="Supplier"

            />

    </LinearLayout>

</LinearLayout>