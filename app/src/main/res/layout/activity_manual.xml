<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:screenOrientation="portrait"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManualActivity"
    android:orientation="vertical"
    >

    <ImageView
        android:id="@+id/Manual_IMG_back"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="25dp"
        android:src="@drawable/back"
        android:tag="back"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REGISTE GUIDE"
        android:gravity="center"
        android:textSize="25sp"
        android:textColor="@color/design_default_color_primary"
        />

    <TextView
        android:id="@+id/Manual_LBL_txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Click on 'Register as__'"
        android:textSize="40sp"
        />
    <TextView
        android:id="@+id/Manual_LBL_txt2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Fill the black boxes"
    android:textSize="40sp"
    />
    <TextView
        android:id="@+id/Manual_LBL_txt3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Click on 'Register'"
        android:textSize="40sp"
        android:layout_weight="1"
        />

</LinearLayout>